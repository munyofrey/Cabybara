<!DOCTYPE html>
<html>
<head>
  <title>GoalApp</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if logged_in? %>
  <%= current_user.username %>
  <%= button_to 'Log Out', session_url, method: :delete %>
  <%= link_to 'My Goals', user_url(current_user) %>
<% else %>
  <%= link_to 'Sign In', new_session_url %>
  <%= link_to 'Register', new_user_url %>
<% end %>

<% flash[:errors].try(:each) do |error| %>
  <%= error %>
<% end %>

<%= yield %>

</body>
</html>
